{# templates/email/invoice_reminder.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{{ reminder.subject }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background-color: #f59e0b;
            color: white;
            padding: 20px;
            text-align: center;
            border-radius: 8px 8px 0 0;
        }
        .content {
            background-color: #f8f9fa;
            padding: 20px;
            border-radius: 0 0 8px 8px;
        }
        .reminder-info {
            background-color: #fef3c7;
            border: 1px solid #f59e0b;
            padding: 15px;
            border-radius: 5px;
            margin: 20px 0;
        }
        .footer {
            text-align: center;
            font-size: 12px;
            color: #666;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ company.name }}</h1>
        <p>{{ reminder.typeLabel }}</p>
    </div>

    <div class="content">
        <p>Bonjour {{ customer.firstName }} {{ customer.lastName }},</p>

        <div>{{ reminder.message|nl2br }}</div>

        <div class="reminder-info">
            <strong>Facture concernée :</strong><br>
            <strong>Numéro :</strong> {{ invoice.number }}<br>
            <strong>Date d'échéance :</strong> {{ invoice.dueDate|date('d/m/Y') }}<br>
            <strong>Montant :</strong> {{ invoice.formattedTotal }}
        </div>

        <p>Vous trouverez la facture en pièce jointe pour votre information.</p>

        <p>Nous vous remercions de régulariser cette situation dans les plus brefs délais.</p>

        <p>Cordialement,<br>
        L'équipe {{ company.name }}</p>
    </div>

    <div class="footer">
        <p>{{ company.name }}<br>
        {{ company.address }}, {{ company.postalCode }} {{ company.city }}<br>
        {% if company.phone %}Tél : {{ company.phone }} - {% endif %}
        {% if company.email %}Email : {{ company.email }}{% endif %}</p>
    </div>
</body>
</html>