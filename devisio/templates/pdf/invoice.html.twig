{# templates/pdf/invoice.html.twig #}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Facture {{ invoice.number }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            font-size: 12px;
            line-height: 1.4;
            color: #333;
            margin: 0;
            padding: 20px;
        }
        .header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
            border-bottom: 2px solid #10b981;
            padding-bottom: 20px;
        }
        .company-info {
            flex: 1;
        }
        .company-name {
            font-size: 24px;
            font-weight: bold;
            color: #10b981;
            margin-bottom: 10px;
        }
        .invoice-info {
            text-align: right;
            flex: 1;
        }
        .invoice-number {
            font-size: 18px;
            font-weight: bold;
            color: #10b981;
            margin-bottom: 5px;
        }
        .addresses {
            display: flex;
            justify-content: space-between;
            margin-bottom: 30px;
        }
        .address-block {
            flex: 1;
            margin-right: 20px;
        }
        .address-title {
            font-weight: bold;
            margin-bottom: 10px;
            color: #10b981;
        }
        .invoice-details {
            margin-bottom: 30px;
        }
        .invoice-details h3 {
            color: #10b981;
            margin-bottom: 10px;
        }
        .items-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 30px;
        }
        .items-table th,
        .items-table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }
        .items-table th {
            background-color: #f8f9fa;
            font-weight: bold;
            color: #10b981;
        }
        .items-table td.number {
            text-align: right;
        }
        .totals {
            margin-left: auto;
            width: 300px;
            margin-bottom: 30px;
        }
        .totals table {
            width: 100%;
            border-collapse: collapse;
        }
        .totals td {
            padding: 5px 10px;
            border-bottom: 1px solid #ddd;
        }
        .totals .total-row {
            font-weight: bold;
            background-color: #f8f9fa;
            color: #10b981;
        }
        .payment-info {
            margin-top: 30px;
            padding: 15px;
            background-color: #f0fdf4;
            border: 1px solid #10b981;
            border-radius: 5px;
        }
        .payment-info h4 {
            color: #10b981;
            margin-bottom: 10px;
        }
        .conditions {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #ddd;
        }
        .conditions h4 {
            color: #10b981;
            margin-bottom: 10px;
        }
        .footer {
            margin-top: 40px;
            text-align: center;
            font-size: 10px;
            color: #666;
            border-top: 1px solid #ddd;
            padding-top: 20px;
        }
        .status-badge {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 10px;
            font-weight: bold;
            text-transform: uppercase;
        }
        .status-draft { background-color: #6b7280; color: white; }
        .status-sent { background-color: #3b82f6; color: white; }
        .status-paid { background-color: #10b981; color: white; }
        .status-overdue { background-color: #ef4444; color: white; }
        .status-cancelled { background-color: #f59e0b; color: white; }
        .due-date-warning {
            background-color: #fef2f2;
            border: 1px solid #ef4444;
            color: #dc2626;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="header">
        <div class="company-info">
            <div class="company-name">{{ invoice.company.name }}</div>
            <div>{{ invoice.company.address }}</div>
            <div>{{ invoice.company.postalCode }} {{ invoice.company.city }}</div>
            <div>{{ invoice.company.country }}</div>
            {% if invoice.company.phone %}
                <div>Tél: {{ invoice.company.phone }}</div>
            {% endif %}
            {% if invoice.company.email %}
                <div>Email: {{ invoice.company.email }}</div>
            {% endif %}
            {% if invoice.company.website %}
                <div>{{ invoice.company.website }}</div>
            {% endif %}
        </div>
        <div class="invoice-info">
            <div class="invoice-number">FACTURE {{ invoice.number }}</div>
            <div>Date: {{ invoice.invoiceDate|date('d/m/Y') }}</div>
            <div>Échéance: {{ invoice.dueDate|date('d/m/Y') }}</div>
            <div style="margin-top: 10px;">
                <span class="status-badge status-{{ invoice.status }}">{{ invoice.statusLabel }}</span>
            </div>
            {% if invoice.isOverdue %}
                <div style="margin-top: 10px; color: #dc2626; font-weight: bold;">
                    EN RETARD DE {{ (invoice.daysUntilDue * -1) }} JOUR(S)
                </div>
            {% endif %}
        </div>
    </div>

    {% if invoice.isOverdue %}
        <div class="due-date-warning">
            <strong>⚠️ FACTURE EN RETARD</strong><br>
            Cette facture était due le {{ invoice.dueDate|date('d/m/Y') }}. 
            Merci de procéder au règlement dans les plus brefs délais.
        </div>
    {% endif %}

    <div class="addresses">
        <div class="address-block">
            <div class="address-title">Entreprise</div>
            <div><strong>{{ invoice.company.name }}</strong></div>
            {% if invoice.company.siret %}
                <div>SIRET: {{ invoice.company.siret }}</div>
            {% endif %}
            {% if invoice.company.vatNumber %}
                <div>TVA: {{ invoice.company.vatNumber }}</div>
            {% endif %}
            <div>{{ invoice.company.fullAddress }}</div>
        </div>
        <div class="address-block">
            <div class="address-title">Client</div>
            <div><strong>{{ invoice.customer.displayName }}</strong></div>
            {% if invoice.customer.isCompany and invoice.customer.siret %}
                <div>SIRET: {{ invoice.customer.siret }}</div>
            {% endif %}
            {% if invoice.customer.isCompany and invoice.customer.vatNumber %}
                <div>TVA: {{ invoice.customer.vatNumber }}</div>
            {% endif %}
            <div>{{ invoice.customer.fullAddress }}</div>
            <div>{{ invoice.customer.email }}</div>
            {% if invoice.customer.phone %}
                <div>{{ invoice.customer.phone }}</div>
            {% endif %}
        </div>
    </div>

    <div class="invoice-details">
        <h3>{{ invoice.subject }}</h3>
        {% if invoice.description %}
            <p>{{ invoice.description|nl2br }}</p>
        {% endif %}
    </div>

    <table class="items-table">
        <thead>
            <tr>
                <th style="width: 40%;">Produit/Service</th>
                <th style="width: 20%;">Prix unitaire</th>
                <th style="width: 15%;">Quantité</th>
                <th style="width: 10%;">Unité</th>
                <th style="width: 15%;">Total</th>
            </tr>
        </thead>
        <tbody>
            {% for item in invoice.items %}
                <tr>
                    <td>
                        <strong>{{ item.productName }}</strong>
                        {% if item.description %}
                            <br><small>{{ item.description }}</small>
                        {% endif %}
                    </td>
                    <td class="number">{{ item.formattedUnitPrice }}</td>
                    <td class="number">{{ item.quantity }}</td>
                    <td>{{ item.unit }}</td>
                    <td class="number">{{ item.formattedTotal }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="totals">
        <table>
            <tr>
                <td>Sous-total HT:</td>
                <td class="number">{{ invoice.formattedSubtotal }}</td>
            </tr>
            <tr>
                <td>TVA ({{ invoice.company.vatRate }}%):</td>
                <td class="number">{{ invoice.formattedVatAmount }}</td>
            </tr>
            <tr class="total-row">
                <td>Total TTC:</td>
                <td class="number">{{ invoice.formattedTotal }}</td>
            </tr>
        </tbody>
    </table>
    </div>

    {% if invoice.paymentTerms %}
        <div class="payment-info">
            <h4>Modalités de paiement</h4>
            <p>{{ invoice.paymentTerms|nl2br }}</p>
        </div>
    {% endif %}

    {% if invoice.notes %}
        <div class="conditions">
            <h4>Notes</h4>
            <p>{{ invoice.notes|nl2br }}</p>
        </div>
    {% endif %}

    <div class="footer">
        <p>{{ invoice.company.name }} - {{ invoice.company.fullAddress }}</p>
        {% if invoice.company.siret %}
            <p>SIRET: {{ invoice.company.siret }}</p>
        {% endif %}
        {% if invoice.company.vatNumber %}
            <p>N° TVA: {{ invoice.company.vatNumber }}</p>
        {% endif %}
        <p style="margin-top: 10px;">
            <strong>En cas de retard de paiement, des pénalités de retard pourront être appliquées.</strong>
        </p>
    </div>
</body>
</html>