{% extends 'base.html.twig' %}

{% block title %}Nouvelle saison - Devisio{% endblock %}
{% block page_title %}Créer une nouvelle saison{% endblock %}

{% block header_actions %}
    <a href="{{ path('app_admin_seasons') }}" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded-lg inline-flex items-center">
        <i class="fas fa-arrow-left mr-2"></i>
        Retour aux saisons
    </a>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .form-control {
            @apply w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-transparent;
        }
        
        .form-checkbox {
            @apply h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded;
        }
        
        .alert-info {
            @apply bg-blue-50 border border-blue-200 rounded-lg p-4;
        }
        
        .alert-info-icon {
            @apply text-blue-500 mr-3 mt-0.5;
        }
        
        .alert-info-title {
            @apply text-sm font-medium text-blue-800;
        }
        
        .alert-info-content {
            @apply mt-1 text-sm text-blue-700;
        }
        
        .form-error {
            @apply text-red-600 text-sm mt-1;
        }
        
        .form-help {
            @apply text-gray-500 text-sm mt-1;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto">
        <!-- Informations sur la création d'une saison -->
        <div class="alert-info mb-6">
            <div class="flex items-start">
                <i class="fas fa-info-circle alert-info-icon"></i>
                <div>
                    <h3 class="alert-info-title">À propos des saisons</h3>
                    <div class="alert-info-content">
                        <p>Les saisons permettent d'appliquer automatiquement des tarifs variables selon la période de l'année.</p>
                        <ul class="mt-2 list-disc list-inside space-y-1">
                            <li>Le <strong>multiplicateur</strong> s'applique à tous vos produits (ex: x1.2 = +20%)</li>
                            <li>Vous pourrez ensuite définir des <strong>prix personnalisés</strong> pour certains produits</li>
                            <li>Les tarifs s'appliquent automatiquement selon la date du devis</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div class="bg-white shadow rounded-lg">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-medium text-gray-900">Informations de la saison</h3>
            </div>

            {{ form_start(form, {'attr': {'class': 'px-6 py-6 space-y-6'}}) }}
                
                <!-- Nom de la saison -->
                <div>
                    {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {% if form.name.vars.help %}
                        <p class="form-help">{{ form.name.vars.help }}</p>
                    {% endif %}
                    {{ form_errors(form.name) }}
                    <p class="mt-1 text-sm text-gray-500">
                        Exemples : "Haute saison été", "Période de Noël", "Basse saison"
                    </p>
                </div>

                <!-- Période -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        {{ form_label(form.startDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                        {% if form.startDate.vars.help %}
                            <p class="form-help">{{ form.startDate.vars.help }}</p>
                        {% endif %}
                        {{ form_errors(form.startDate) }}
                    </div>

                    <div>
                        {{ form_label(form.endDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                        {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                        {% if form.endDate.vars.help %}
                            <p class="form-help">{{ form.endDate.vars.help }}</p>
                        {% endif %}
                        {{ form_errors(form.endDate) }}
                    </div>
                </div>

                <!-- Multiplicateur -->
                <div>
                    {{ form_label(form.multiplier, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    <div class="relative">
                        {{ form_widget(form.multiplier, {'attr': {'class': 'form-control', 'id': 'multiplier-input'}}) }}
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <span class="text-gray-500 sm:text-sm" id="multiplier-percentage"></span>
                        </div>
                    </div>
                    {% if form.multiplier.vars.help %}
                        <p class="form-help">{{ form.multiplier.vars.help }}</p>
                    {% endif %}
                    {{ form_errors(form.multiplier) }}
                    <div class="mt-2 p-3 bg-gray-50 rounded-lg">
                        <div class="text-sm text-gray-700">
                            <p class="font-medium mb-2">Exemples de multiplicateurs :</p>
                            <ul class="space-y-1">
                                <li><code class="bg-gray-200 px-1 rounded">1.20</code> → +20% (haute saison)</li>
                                <li><code class="bg-gray-200 px-1 rounded">1.00</code> → Prix normal</li>
                                <li><code class="bg-gray-200 px-1 rounded">0.80</code> → -20% (basse saison)</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Statut actif -->
                <div class="flex items-center">
                    {{ form_widget(form.isActive, {'attr': {'class': 'form-checkbox'}}) }}
                    <div class="ml-3">
                        {{ form_label(form.isActive, null, {'label_attr': {'class': 'text-sm font-medium text-gray-700'}}) }}
                        {% if form.isActive.vars.help %}
                            <p class="form-help">{{ form.isActive.vars.help }}</p>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex justify-between items-center pt-6 border-t border-gray-200">
                    <a href="{{ path('app_admin_seasons') }}" class="bg-gray-300 hover:bg-gray-400 text-gray-700 px-6 py-3 rounded-lg inline-flex items-center transition-colors">
                        <i class="fas fa-times mr-2"></i>
                        Annuler
                    </a>
                    
                    <button type="submit" class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-3 rounded-lg inline-flex items-center transition-colors">
                        <i class="fas fa-save mr-2"></i>
                        Créer la saison
                    </button>
                </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const multiplierInput = document.getElementById('multiplier-input');
            const percentageSpan = document.getElementById('multiplier-percentage');
            
            function updatePercentage() {
                const value = parseFloat(multiplierInput.value) || 1;
                const percentage = ((value - 1) * 100);
                
                if (percentage > 0) {
                    percentageSpan.textContent = `+${percentage.toFixed(0)}%`;
                    percentageSpan.className = 'text-green-600 sm:text-sm font-medium';
                } else if (percentage < 0) {
                    percentageSpan.textContent = `${percentage.toFixed(0)}%`;
                    percentageSpan.className = 'text-red-600 sm:text-sm font-medium';
                } else {
                    percentageSpan.textContent = 'Prix normal';
                    percentageSpan.className = 'text-gray-500 sm:text-sm';
                }
            }
            
            if (multiplierInput) {
                multiplierInput.addEventListener('input', updatePercentage);
                updatePercentage(); // Initial call
            }
        });
    </script>
{% endblock %}