{% extends 'base.html.twig' %}

{% block title %}Inscription - Devisio{% endblock %}

{% block body %}
<div class="bg-white p-6 rounded-xl shadow-lg max-w-4xl w-full max-h-screen overflow-y-auto">
    <div class="text-center mb-6">
        <div class="inline-flex items-center justify-center w-16 h-16 bg-primary-100 rounded-full mb-4">
            <i class="fas fa-plane text-2xl text-primary-600"></i>
        </div>
        <h1 class="text-3xl font-bold text-primary-600">Créer un compte</h1>
        <p class="text-gray-600 mt-2">Démarrez avec Devisio en quelques minutes</p>
    </div>

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-6'}}) }}
        
        <!-- Informations utilisateur -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-user mr-2 text-primary-600"></i>
                Vos informations
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    {{ form_label(registrationForm.user.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.user.firstName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.user.firstName) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.user.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.user.lastName, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.user.lastName) }}
                </div>
                
                <div class="md:col-span-2">
                    {{ form_label(registrationForm.user.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.user.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.user.email) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.user.plainPassword.first, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.user.plainPassword.first, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.user.plainPassword.first) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.user.plainPassword.second, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.user.plainPassword.second, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.user.plainPassword.second) }}
                </div>
            </div>
        </div>

        <!-- Informations entreprise -->
        <div class="bg-gray-50 p-4 rounded-lg">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">
                <i class="fas fa-building mr-2 text-primary-600"></i>
                Informations de l'entreprise
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="md:col-span-2">
                    {{ form_label(registrationForm.company.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.name, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.name) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.company.siret, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.siret, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.siret) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.company.vatNumber, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.vatNumber, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.vatNumber) }}
                </div>
                
                <div class="md:col-span-2">
                    {{ form_label(registrationForm.company.address, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.address, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.address) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.company.postalCode, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.postalCode, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.postalCode) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.company.city, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.city, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.city) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.company.country, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.country, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.country) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.company.phone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.phone, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.phone) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.company.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.email, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.email) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.company.website, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.website, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.website) }}
                </div>
                
                <div>
                    {{ form_label(registrationForm.company.vatRate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'}}) }}
                    {{ form_widget(registrationForm.company.vatRate, {'attr': {'class': 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-transparent'}}) }}
                    {{ form_errors(registrationForm.company.vatRate) }}
                </div>
            </div>
        </div>

        <!-- Conditions et boutons -->
        <div class="space-y-4">
            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 rounded'}}) }}
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'ml-2 text-sm text-gray-600'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <div class="flex flex-col sm:flex-row justify-between items-center gap-4">
                <a href="{{ path('app_login') }}" class="text-primary-600 hover:text-primary-700 font-medium transition duration-200">
                    <i class="fas fa-arrow-left mr-2"></i>
                    Retour à la connexion
                </a>
                
                <button type="submit" class="w-full sm:w-auto bg-primary-600 text-white py-3 px-6 rounded-lg hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 transition duration-200 font-medium">
                    <i class="fas fa-user-plus mr-2"></i>
                    Créer le compte
                </button>
            </div>
        </div>

    {{ form_end(registrationForm) }}
</div>
{% endblock %}